---
import Navigation from '@components/Navigation.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/jobs.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>
      Carlos Ramírez - Software Engineer | React, Next.js, Node.js, TypeScript,
      Kotlin, Spring Boot
    </title>
    <meta
      name='description'
      content='Portfolio of Carlos Ramírez, a Software Engineer specializing in web development with expertise in React, Next.js, Node.js, TypeScript, Kotlin, and Spring Boot. Explore my projects and skills.'
    />
    <meta name='author' content='Carlos Ramírez' />
    <meta
      name='keywords'
      content='Software Engineer, Portfolio, Web Development, React, Next.js, Node.js, TypeScript, Kotlin, Spring Boot'
    />
    <meta name='robots' content='index, follow' />
    <meta
      property='og:title'
      content='Carlos Ramírez - Software Engineer | React, Next.js, Node.js, TypeScript, Kotlin, Spring Boot'
    />
    <meta
      property='og:description'
      content='Portfolio of Carlos Ramírez, a Software Engineer specializing in web development with expertise in React, Next.js, Node.js, TypeScript, Kotlin, and Spring Boot. Explore my projects and skills.'
    />
    <meta property='og:type' content='website' />
  </head>
  <body>
    <Navigation />
    <main class='mx-auto max-w-7xl px-6 lg:px-8'>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
